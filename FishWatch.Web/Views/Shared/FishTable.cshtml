@model List<FishWatch.Models.Fish>

<table class="table">
    <tr>
        <th>Image</th>
        <th>Name</th>
        <th>Harvest Type</th>
        <th>Availability</th>
    </tr>
    @foreach (var fish in Model.OrderBy(x => x.SpeciesName))
    {
        <tr>
            <td>
                @if (fish.SpeciesIllustrationPhoto != null)
                {
                    <img src="@fish.SpeciesIllustrationPhoto.Src" alt="@fish.SpeciesIllustrationPhoto.Alt" style="height: 80px"/>
                }
            </td>
            <td>@fish.SpeciesName</td>
            <td>@fish.HarvestType</td>
            <td>@Html.Raw(fish.Availability)</td>
            <td>
                <a href="/fish/@fish.Id">
                    <button type="button" class="info-btn">
                        <i class="fa-solid fa-eye"></i>
                    </button>
                </a>
            </td>
        </tr>
    }
</table>